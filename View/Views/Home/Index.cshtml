@{
    ViewBag.Title = "Climas";
}


<div class="row">


    <div class="col-12 col-lg-6">
        <div class="jumbotron text-white" id="weather-hot">

            <div class="loading-overlay" id="loading-mais-quentes">
                <p>Carregando...</p>
            </div>
            <div class="error-overlay" id="error-mais-quentes" style="display: none;">
                <p>Ocorreu um erro...</p>
            </div>


            <i class="bi bi-sun weather-icon"></i>

            <h3>
                <span>Cidades mais quentes hoje</span>
            </h3>
            <p class="lead">Confira a lista de cidades mais <i class="bi bi-sun-fill"></i> <strong>quentes</strong> no dia de <strong>hoje</strong>.</p>

            <table class="table table-weather text-white" id="cidades-mais-quentes">
                <thead>
                    <tr>
                        <th scope="col"><i class="bi bi-geo-alt mr-2"></i>Cidade</th>
                        <th class="th-weather-min" scope="col"><i class="bi bi-thermometer-low mr-2"></i>Mínima</th>
                        <th class="th-weather-max" scope="col"><i class="bi bi-thermometer-high mr-2"></i>Máxima</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Cidade</td>
                        <td class="td-weather-min">99 Cº</td>
                        <td class="td-weather-max">99 Cº</td>
                    </tr>
                    <tr>
                        <td>Cidade</td>
                        <td class="td-weather-min">99 Cº</td>
